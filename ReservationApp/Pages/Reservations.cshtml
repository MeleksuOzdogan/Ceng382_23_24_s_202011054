@page
@model MyApp.Namespace.ReservationsModel
@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create a Reservation</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <div class="form-group">
        <label asp-for="NewReservation.StartDateTime" class="control-label">Start Date and Time:</label>
        <input asp-for="NewReservation.StartDateTime" class="form-control" type="datetime-local"  required value="@Model.NewReservation.StartDateTime.ToString("yyyy-MM-ddTHH:mm")"/> 
        <span asp-validation-for="NewReservation.StartDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewReservation.EndDateTime" class="control-label">End Date and Time:</label>
        <input asp-for="NewReservation.EndDateTime" class="form-control" type="datetime-local"  required value="@Model.NewReservation.EndDateTime.ToString("yyyy-MM-ddTHH:mm")"/>
        <span asp-validation-for="NewReservation.EndDateTime" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="NewReservation.RoomId" class="control-label">Room:</label>
        <select asp-for="NewReservation.RoomId" class="form-control" required>
            <option value="">Select a room</option>
            @foreach (var room in Model.Rooms)
            {
                <option value="@room.RoomId">@room.RoomName</option>
            }
        </select>
        <span asp-validation-for="NewReservation.RoomId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Reservation</button>
</form>

<h1><br/></h1>
<h1>Reservation List</h1>

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Reservation Id</th>
            <th scope="col">Start Date and Time</th>
            <th scope="col">End Date and Time</th>
            <th scope="col">Room Name</th>
            <th scope="col">Reserver Id</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model.Reservations)
        {
            <tr>
                <td>@reservation.ReservationId</td>
                <td>@reservation.StartDateTime</td>
                <td>@reservation.EndDateTime</td>
                <td>@reservation.Room.RoomName</td>
                <td>@reservation.ReserverId</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@reservation.ReservationId">
                        @* <input type="hidden" name="reservationId" value="@reservation.ReservationId" /> *@
                        <button  class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<a href="/ViewReservations">View Reservations</a>